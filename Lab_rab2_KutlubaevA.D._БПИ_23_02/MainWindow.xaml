<Window x:Class="Lab_rab2_KutlubaevA.D._БПИ_23_02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_rab2_KutlubaevA.D._БПИ_23_02"
        mc:Ignorable="d"
        Title="Ответ:" Height="Auto" Width="400"
        WindowStartupLocation="CenterScreen"
        SizeToContent="Height">
    <StackPanel>
        <RadioButton IsChecked="True" Margin="5" Name="Radio1" GroupName="formula">
            <WrapPanel>
                <Image Source="Images/1.png" Height="30" Margin="5"/>
                <GroupBox Header="Parameters" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="a" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center"/>
                        <TextBox Text="0,00" Grid.Column="1" Grid.Row="0" MinWidth="70" Name="R1TextA" Margin="2" VerticalAlignment="Center"/>

                        <Label Content="f" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="1" Grid.Row="1" SelectedIndex="0" Name="R1ComboF" Margin="2" VerticalAlignment="Center">
                            <ComboBoxItem>4</ComboBoxItem>
                            <ComboBoxItem>5</ComboBoxItem>
                            <ComboBoxItem>6</ComboBoxItem>
                            <ComboBoxItem>7</ComboBoxItem>
                            <ComboBoxItem>8</ComboBoxItem>
                            <ComboBoxItem>9</ComboBoxItem>
                        </ComboBox>
                    </Grid>
                </GroupBox>
            </WrapPanel>
        </RadioButton>

        <RadioButton Margin="5" Name="Radio2" GroupName="formula">
            <StackPanel>
                <Image Source="Images/2.png" Height="23" Margin="5"/>
                <GroupBox Header="Parameters" Margin="5">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="a" VerticalAlignment="Center"/>
                        <TextBox Text="0,00" MinWidth="70" Name="R2TextA" Margin="2" VerticalAlignment="Center"/>
                        <Label Content="b" VerticalAlignment="Center"/>
                        <TextBox Text="0,00" MinWidth="70" Name="R2TextB" Margin="2" VerticalAlignment="Center"/>
                        <Label Content="f" VerticalAlignment="Center"/>
                        <ComboBox MinWidth="100" Name="R2ComboF" SelectedIndex="0" Margin="2" VerticalAlignment="Center">
                            <ComboBoxItem>10</ComboBoxItem>
                            <ComboBoxItem>20</ComboBoxItem>
                            <ComboBoxItem>30</ComboBoxItem>
                            <ComboBoxItem>40</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </RadioButton>

        <RadioButton Margin="5" Name="Radio3" GroupName="formula">
            <StackPanel>
                <Image Source="Images/3.png" Height="30" Margin="5"/>
                <GroupBox Header="Parameters" Margin="5">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="a" VerticalAlignment="Center"/>
                        <TextBox Text="0,00" MinWidth="50" Name="R3TextA" Margin="2" VerticalAlignment="Center"/>
                        <Label Content="b" VerticalAlignment="Center"/>
                        <TextBox Text="0,00" MinWidth="50" Name="R3TextB" Margin="2" VerticalAlignment="Center"/>
                        <Label Content="c" VerticalAlignment="Center"/>
                        <ComboBox MinWidth="50" SelectedIndex="0" Name="R3ComboC" Margin="2" VerticalAlignment="Center">
                            <ComboBoxItem>0</ComboBoxItem>
                            <ComboBoxItem>1</ComboBoxItem>
                        </ComboBox>
                        <Label Content="d" VerticalAlignment="Center"/>
                        <ComboBox MinWidth="70" SelectedIndex="0" Name="R3ComboD" Margin="2" VerticalAlignment="Center">
                            <ComboBoxItem>-1</ComboBoxItem>
                            <ComboBoxItem>0</ComboBoxItem>
                            <ComboBoxItem>1</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </RadioButton>

        <RadioButton Margin="5" Name="Radio4" GroupName="formula">
            <WrapPanel Orientation="Horizontal">
                <Image Source="Images/4.png" Height="60" Margin="5"/>
                <GroupBox Header="Параметры" Margin="5">
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <Label Content="c" VerticalAlignment="Center"/>
                        <ComboBox MinWidth="70" VerticalAlignment="Center" Name="R4ComboC" SelectedIndex="0" Margin="5,0">
                            <ComboBoxItem>0</ComboBoxItem>
                            <ComboBoxItem>1</ComboBoxItem>
                            <ComboBoxItem>2</ComboBoxItem>
                            <ComboBoxItem>3</ComboBoxItem>
                            <ComboBoxItem>4</ComboBoxItem>
                            <ComboBoxItem>5</ComboBoxItem>
                        </ComboBox>

                        <Label Content="d" VerticalAlignment="Center"/>
                        <TextBox Text="0" Width="70" VerticalAlignment="Center" Name="R4TextD" Margin="5,0"/>

                        <Label Content="a" VerticalAlignment="Center"/>
                        <TextBox Text="0,00" Width="70" VerticalAlignment="Center" Name="R4TextA" Margin="5,0"/>
                    </StackPanel>
                </GroupBox>
            </WrapPanel>
        </RadioButton>


        <RadioButton Margin="5" Name="Radio5" GroupName="formula">
            <StackPanel>
                <Image Source="Images/var4.png" Height="60" Margin="5" />
                <GroupBox Header="Parameters" Margin="5">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Content="N" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                        <TextBox Name="R5TextN" Text="1" Grid.Row="0" Grid.Column="1" MinWidth="50" Margin="2" VerticalAlignment="Center"/>

                        <Label Content="K" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center"/>
                        <TextBox Name="R5TextK" Text="1" Grid.Row="0" Grid.Column="3" MinWidth="50" Margin="2" VerticalAlignment="Center"/>

                        <Label Content="x" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                        <TextBox Name="R5TextX" Text="0,00" Grid.Row="1" Grid.Column="1" MinWidth="50" Margin="2" VerticalAlignment="Center"/>

                        <Label Content="f" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center"/>
                        <TextBox Name="R5TextF" Text="0,00" Grid.Row="1" Grid.Column="3" MinWidth="50" Margin="2" VerticalAlignment="Center"/>

                        <Label Content="y" Grid.Row="1" Grid.Column="4" VerticalAlignment="Center"/>
                        <TextBox Name="R5TextY" Text="0,00" Grid.Row="1" Grid.Column="5" MinWidth="50" Margin="2" VerticalAlignment="Center"/>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </RadioButton>


        <Button Content="Считать" Width="100" Margin="10" Click="Calc_Click"/>
    </StackPanel>
</Window>